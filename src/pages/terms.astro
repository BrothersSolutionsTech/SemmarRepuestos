---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/global/Navigation.astro';
import Terms from '../components/infopages/Terms.astro';
import Footer from '../components/global/Footer.astro';
import { AstroSeo } from '@astrolib/seo';
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Terms"
  description="Your site description goes here"
  canonical=""
  openGraph={{
    url: '',
    title: 'Semmar repuestos',
    description: 'Soluciones en repuestos para todas tus necesidades',
    images: [
      {
        url: '',
        width: 1200,
        height: 630,
        alt: 'Social open graph',
        type: 'image/jpeg',
      },
      {
        url: '',
        width: 4096,
        height: 4096,
        alt: 'Twitter open graph',
        type: 'image/jpeg',
      },
      { url: 'social-og-img' },
      { url: 'twitter-og-img' },
    ],
    site_name: 'Semmar repuestos',
  }}
  twitter={{
    handle: '@pepito123',
    site: '@site',
    cardType: 'summary_large_image',
  }}
/>
<BaseLayout>
  <Navigation />
  <Terms />
  <Footer />
</BaseLayout>
