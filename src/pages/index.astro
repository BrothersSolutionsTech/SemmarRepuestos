---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/global/Navigation.astro';

import Hero from '../components/landing/Hero.astro';
import SectionOne from '../components/landing/SectionOne.astro';
import SectionTwo from '../components/landing/SectionTwo.astro';
import Testimonial from '../components/global/Testimonial.astro';
import Pricing from '../components/landing/Pricing.astro';
import Cta from '../components/global/Cta.astro';
import Footer from '../components/global/Footer.astro';
import { AstroSeo } from '@astrolib/seo';
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Home"
  description="Your site description goes here"
  canonical="www.pepito123.com"
  openGraph={{
    url: 'www.pepito123.com',
    title: 'Open Graph Title',
    description: 'Open Graph Description',
    images: [
      {
        url: 'www.pepito123.com/opengraph/social-og.jpg',
        width: 1200,
        height: 630,
        alt: 'Social open graph',
        type: 'image/jpeg',
      },
      {
        url: 'www.pepito123.com/opengraph/twitter-og.jpg',
        width: 4096,
        height: 4096,
        alt: 'Twitter open graph',
        type: 'image/jpeg',
      },
      { url: 'www.pepito123.com/opengraph/social-og.jpg' },
      { url: 'www.pepito123.com/opengraph/twitter-og.jpg' },
    ],
    site_name: 'YourSitesName',
  }}
  twitter={{
    handle: '@pepito123',
    site: '@site',
    cardType: 'summary_large_image',
  }}
/>
<BaseLayout>
  <Navigation />
  <Hero />

  <SectionOne />
  <!-- <SectionTwo /> -->
  <Testimonial />
  <!-- <Pricing /> -->
  <Cta />
  <Footer />
</BaseLayout>
