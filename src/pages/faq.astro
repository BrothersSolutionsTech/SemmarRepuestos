---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/global/Navigation.astro';
import Faq from '../components/infopages/Faq.astro';
import Footer from '../components/global/Footer.astro';
import { AstroSeo } from '@astrolib/seo';
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Home"
  description="Your site description goes here"
  canonical="www.pepito123.com"
  openGraph={{
    url: 'www.pepito123.com',
    title: 'Open Graph Title',
    description: 'Open Graph Description',
    images: [
      {
        url: 'https://www.pepito123.com/opengraph/social-og.jpg',
        width: 1200,
        height: 630,
        alt: 'Social open graph',
        type: 'image/jpeg',
      },
      {
        url: 'https://www.pepito123.com/opengraph/twitter-og.jpg',
        width: 4096,
        height: 4096,
        alt: 'Twitter open graph',
        type: 'image/jpeg',
      },
      { url: 'https://www.pepito123.com/opengraph/social-og.jpg' },
      { url: 'https://www.pepito123.com/opengraph/twitter-og.jpg' },
    ],
    site_name: 'YourSitesName',
  }}
  twitter={{
    handle: '@pepito123',
    site: '@site',
    cardType: 'summary_large_image',
  }}
/>
<BaseLayout>
  <Navigation />
  <Faq />
  <Footer />
</BaseLayout>
